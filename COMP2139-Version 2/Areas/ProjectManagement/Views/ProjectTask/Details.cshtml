@model COMP2139_Friday.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewBag.Title = "Task Details";
}

<h2>Task Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>

        <dl class="row">
            <dt class="col-sm-3">Project Name</dt>
            <dd class="col-sm-9">@Model.Project.Name</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <a asp-controller="ProjectTask" asp-action="Edit" asp-route-projectId="@Model.ProjectId" asp-route-id="@Model.ProjectTaskId" class="btn btn-warning">Edit</a>
        <a asp-controller="ProjectTask" asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to Task List</a>
    </div>
</div>
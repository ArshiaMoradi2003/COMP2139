@model COMP2139_Friday.Areas.ProjectManagement.Models.Project

@{
    ViewBag.Title = "Project Details";
    Layout = "_Layout";
}

<h2>Project Details</h2>

<div class="card">
    <div class="card-body">
        <div class="card-title"><strong>@Model.Name</strong></div>
        <div class="card-text">@Model.Description</div>

        <dl class="row">
            <dt class="col-sm-3">Project Id</dt>
            <dd class="col-sm-9">@Model.ProjectId</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <!-- Edit Button & Project-Index button -->
        <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>
        <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Project List</a>
    </div>
</div>

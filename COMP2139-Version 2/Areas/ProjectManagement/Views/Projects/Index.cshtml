@model List<COMP2139_Friday.Areas.ProjectManagement.Models.Project>

@{
    ViewBag.Title = "Projects";
    Layout = "_Layout";
    bool searchPerformed = ViewBag.SearchPerformed ?? false;
    string searchTerm = ViewBag.SearchTerm as string;
}

<h2>Projects</h2>

<div class="mb-3">
    <!-- Link to Create page -->
    <a asp-action="Create" asp-controller="Projects" class="btn btn-primary">Create New Project</a>
</div>

@if (searchPerformed && !Model.Any())
{
    <div class="alert alert-warning">
        No projects found for "@searchTerm".
    </div>
}

@if (Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.ProjectId</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>
                    <!-- Link to Details page -->
                    <a asp-action="Details" asp-controller="Projects" asp-route-id="@project.ProjectId" class="btn btn-info btn-sm">Details</a>
                    <!-- Link to Edit page -->
                    <a asp-action="Edit" asp-controller="Projects" asp-route-id="@project.ProjectId" class="btn btn-warning btn-sm">Edit</a>
                    <!-- Link to Delete page -->
                    <a asp-action="Delete" asp-controller="Projects" asp-route-id="@project.ProjectId" class="btn btn-danger btn-sm">Delete</a>
                    <!-- Button to view tasks associated with this project -->
                    <a asp-controller="ProjectTask" asp-action="Index" asp-route-projectId="@project.ProjectId" class="btn btn-primary">View Tasks</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (!searchPerformed)
{
    <p>No projects available</p>
}

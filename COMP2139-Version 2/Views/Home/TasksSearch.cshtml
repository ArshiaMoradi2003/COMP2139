@model IEnumerable<COMP2139_Friday.Areas.ProjectManagement.Models.ProjectTask>

@{
    ViewBag.Title = "Task Search Results";
    string searchTerm = ViewBag.SearchTerm ?? "";
}

<h2>Task Search Results</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No project tasks found for "@searchTerm".
    </div>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Task ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Project ID</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.ProjectTaskId</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.ProjectId</td>
                <td>
                    <a asp-controller="ProjectTask" asp-action="Details" asp-route-id="@task.ProjectTaskId" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}